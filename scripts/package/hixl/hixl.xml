<config name="hixl" copy_type="delivery" src_path="" dst_path="hixl" install_type="all" install_mod="550" install_own="$username:$usergroup">
    <package_info>
        <product_name>cann</product_name>
        <func_name>hixl</func_name>
        <suffix>run</suffix>
        <install_script>share/info/hixl/script/install.sh</install_script>
        <help>share/info/hixl/script/help.info</help>
        <version>package/hixl/version.xml</version>
        <cleanup>share/info/hixl/script/cleanup.sh</cleanup>
        <parallel>true</parallel>
    </package_info>
    <generate_info value="hixl_version.h" dst_path="hixl" install_path="$(TARGET_ENV)/include/version" install_mod="440" install_type="devel" generator="version_header">
        <HIXL_VERSION>$(ASCEND_VER)</HIXL_VERSION>
        <HIXL_TIMESTAMP>$(TIMESTAMP_NO)</HIXL_TIMESTAMP>
    </generate_info>
    <generate_info value="scene.info" dst_path="share/info/hixl" install_path="share/info/hixl" install_mod="440">
        <os>$(OS_NAME)</os>
        <os_version>$(OS_VER)</os_version>
        <arch>$(ARCH)</arch>
    </generate_info>
    <version_info install="true" install_path="hixl" install_own="$username:$usergroup" install_mod="440"/>
    <file_info value="hixl_script" copy_type="source" src_path="" dst_path="share/info/hixl" install_path="share/info/hixl">
        <file value="script" entity="true"/>
        <file value="version.info" dst_path="share/info/hixl"/>
    </file_info>
    <file_info copy_type="source" src_path="" dst_path="hixl/include" install_path="$(TARGET_ENV)/include" install_type="all">
        <file value="adxl" install_mod="550" entity="true" />
        <file value="hixl" install_mod="550" entity="true" />
    </file_info>
    <file_info value="hixl_lib" copy_type="delivery" src_path="" dst_path="hixl/lib" install_path="$(TARGET_ENV)/lib64" install_mod="440">
        <file value="libllm_datadist.so" file_type="shared" />
        <file value="libcann_hixl.so" file_type="shared" />
    </file_info>
    <block_info dependtree="false" dst_path="hixl" block_conf_path="ascend">
        <block name="EngineeringCommon"/>
        <block name="EngineeringFiles"/>
        <block name="LlmDatadistCompatiableInc"/>
    </block_info>
    <dir_info value="hixl" install_path="hixl" install_mod="550" install_type="all">
        <path value="share" install_mod="550"/>
        <path value="share/info" install_mod="750"/>
        <path value="share/info/hixl" install_mod="750"/>
        <path value="share/info/hixl/script"/>
    </dir_info>
    <dir_info value="hixl" install_path="" install_mod="550" install_type="all">
        <path value="$(TARGET_ENV)/include"/>
        <path value="$(TARGET_ENV)/include/adxl"/>
        <path value="$(TARGET_ENV)/include/hixl"/>
    </dir_info>
</config>
